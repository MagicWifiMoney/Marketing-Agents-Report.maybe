{
  "databases": {
    "clients": {
      "name": "Marketing Agency Clients",
      "description": "Master client database with contact info and project status",
      "properties": {
        "client_name": {"type": "title", "name": "Client Name"},
        "business_type": {"type": "select", "name": "Business Type", "options": ["E-commerce", "Local Service", "SaaS", "B2B", "Other"]},
        "website": {"type": "url", "name": "Website"},
        "location": {"type": "rich_text", "name": "Location"},
        "status": {"type": "select", "name": "Status", "options": ["Prospect", "Active", "On Hold", "Completed"]},
        "start_date": {"type": "date", "name": "Start Date"},
        "monthly_budget": {"type": "number", "name": "Monthly Budget"},
        "primary_contact": {"type": "rich_text", "name": "Primary Contact"},
        "notes": {"type": "rich_text", "name": "Notes"}
      }
    },
    "reports": {
      "name": "Client Reports & Audits",
      "description": "All generated reports, audits, and analysis documents",
      "properties": {
        "report_title": {"type": "title", "name": "Report Title"},
        "client": {"type": "relation", "name": "Client", "relation_database": "clients"},
        "report_type": {"type": "select", "name": "Report Type", "options": ["SEO Audit", "Local SEO Plan", "Content Strategy", "Performance Report", "Competitive Analysis", "Brand Analysis"]},
        "report_date": {"type": "date", "name": "Report Date"},
        "status": {"type": "select", "name": "Status", "options": ["Draft", "In Review", "Approved", "Delivered"]},
        "priority": {"type": "select", "name": "Priority", "options": ["Low", "Medium", "High", "Critical"]},
        "executive_summary": {"type": "rich_text", "name": "Executive Summary"},
        "key_findings": {"type": "rich_text", "name": "Key Findings"},
        "recommendations": {"type": "rich_text", "name": "Recommendations"},
        "next_steps": {"type": "rich_text", "name": "Next Steps"},
        "file_url": {"type": "url", "name": "File URL"},
        "generated_by": {"type": "multi_select", "name": "Generated By", "options": ["@seo-strategist", "@copywriter", "@conversion-strategist", "@research-strategist", "@analyzer", "@idea-strategist", "@social-strategist", "@design-creator"]}
      }
    },
    "action_items": {
      "name": "Action Items & Tasks",
      "description": "Trackable tasks and action items from reports",
      "properties": {
        "task_title": {"type": "title", "name": "Task Title"},
        "client": {"type": "relation", "name": "Client", "relation_database": "clients"},
        "report": {"type": "relation", "name": "Source Report", "relation_database": "reports"},
        "assigned_agent": {"type": "select", "name": "Assigned Agent", "options": ["@seo-strategist", "@copywriter", "@conversion-strategist", "@research-strategist", "@analyzer", "@idea-strategist", "@social-strategist", "@design-creator"]},
        "priority": {"type": "select", "name": "Priority", "options": ["Low", "Medium", "High", "Critical"]},
        "status": {"type": "select", "name": "Status", "options": ["Not Started", "In Progress", "Review", "Completed", "Blocked"]},
        "due_date": {"type": "date", "name": "Due Date"},
        "category": {"type": "select", "name": "Category", "options": ["SEO", "Content", "Design", "Analytics", "Strategy", "Technical", "Local SEO"]},
        "expected_impact": {"type": "rich_text", "name": "Expected Impact"},
        "completion_notes": {"type": "rich_text", "name": "Completion Notes"}
      }
    },
    "research_insights": {
      "name": "Research & Market Insights",
      "description": "Market research, competitive analysis, and industry insights",
      "properties": {
        "insight_title": {"type": "title", "name": "Insight Title"},
        "client": {"type": "relation", "name": "Client", "relation_database": "clients"},
        "insight_type": {"type": "select", "name": "Type", "options": ["Market Research", "Competitive Analysis", "Industry Trend", "Keyword Research", "Audience Analysis", "Technical Analysis"]},
        "source": {"type": "rich_text", "name": "Source"},
        "research_date": {"type": "date", "name": "Research Date"},
        "key_findings": {"type": "rich_text", "name": "Key Findings"},
        "implications": {"type": "rich_text", "name": "Implications"},
        "action_required": {"type": "checkbox", "name": "Action Required"},
        "confidence_level": {"type": "select", "name": "Confidence Level", "options": ["Low", "Medium", "High"]},
        "tags": {"type": "multi_select", "name": "Tags", "options": ["SEO", "Content", "Local", "E-commerce", "Technical", "Strategy"]}
      }
    },
    "content_assets": {
      "name": "Content & Creative Assets",
      "description": "All content pieces, templates, and creative assets",
      "properties": {
        "asset_title": {"type": "title", "name": "Asset Title"},
        "client": {"type": "relation", "name": "Client", "relation_database": "clients"},
        "asset_type": {"type": "select", "name": "Asset Type", "options": ["Blog Post", "Social Media", "Email Campaign", "Landing Page", "Template", "Design", "Video", "Infographic"]},
        "content_status": {"type": "select", "name": "Status", "options": ["Draft", "In Review", "Approved", "Published", "Archived"]},
        "created_date": {"type": "date", "name": "Created Date"},
        "publish_date": {"type": "date", "name": "Publish Date"},
        "content_summary": {"type": "rich_text", "name": "Content Summary"},
        "target_keywords": {"type": "rich_text", "name": "Target Keywords"},
        "performance_metrics": {"type": "rich_text", "name": "Performance Metrics"},
        "file_url": {"type": "url", "name": "File URL"},
        "created_by": {"type": "select", "name": "Created By", "options": ["@copywriter", "@design-creator", "@social-strategist", "@seo-strategist"]}
      }
    },
    "performance_metrics": {
      "name": "Performance Metrics & KPIs",
      "description": "Track performance data and KPIs across all clients",
      "properties": {
        "metric_name": {"type": "title", "name": "Metric Name"},
        "client": {"type": "relation", "name": "Client", "relation_database": "clients"},
        "metric_category": {"type": "select", "name": "Category", "options": ["SEO", "Traffic", "Conversions", "Social Media", "Email", "Revenue", "Local SEO"]},
        "current_value": {"type": "number", "name": "Current Value"},
        "previous_value": {"type": "number", "name": "Previous Value"},
        "target_value": {"type": "number", "name": "Target Value"},
        "measurement_date": {"type": "date", "name": "Measurement Date"},
        "change_percentage": {"type": "number", "name": "Change %"},
        "status": {"type": "select", "name": "Status", "options": ["Below Target", "On Track", "Exceeding Target"]},
        "notes": {"type": "rich_text", "name": "Notes"}
      }
    }
  }
}
